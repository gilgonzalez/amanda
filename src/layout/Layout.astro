---
import "../styles/global.css";
import { ClientRouter } from 'astro:transitions';

import Header from '../components/Header.tsx';
import Footer from "../components/Footer.astro";
import SectionNavigation from '../components/SectionNavigation.tsx';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  currentPage?: string;
  ogImage?: string;
  ogType?: string;
}

const { 
  title, 
  description = "Abogada especialista en derecho procesal en Marbella con más de 7 años de experiencia. Asesoría jurídica profesional para empresas y particulares.", 
  keywords = "abogada Marbella, derecho procesal, asesoría jurídica, abogada empresas, servicios legales Marbella, Amanda Cabello Pino abogada",
  currentPage = "inicio",
  ogImage = "/avatar.webp",
  ogType = "website"
} = Astro.props;

// Manejo seguro de URLs
const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site) : Astro.url;
const siteTitle = "Amanda Cabello Pino - Abogada Especialista en Marbella";
const fullTitle = title.includes("Amanda Cabello Pino") ? title : `${title} | ${siteTitle}`;
const ogImageURL = Astro.site ? new URL(ogImage, Astro.site) : ogImage;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- SEO Básico -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Amanda Cabello Pino" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Geo Tags -->
    <meta name="geo.region" content="ES-AN" />
    <meta name="geo.placename" content="Marbella, Málaga, España" />
    <meta name="geo.position" content="36.5108;-4.8850" />
    <meta name="ICBM" content="36.5108, -4.8850" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:alt" content="Amanda Cabello Pino - Abogada Especialista en Marbella" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Amanda Cabello Pino - Abogada" />
    <meta property="og:locale" content="es_ES" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    <meta name="twitter:image:alt" content="Amanda Cabello Pino - Abogada Especialista en Marbella" />
    
    <!-- LinkedIn -->
    <meta property="og:image:type" content="image/webp" />
    <meta name="linkedin:owner" content="Amanda Cabello Pino" />
    
    <!-- WhatsApp -->
    <meta property="og:image:secure_url" content={ogImageURL} />
    
    <!-- Datos Estructurados JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LegalService",
        "name": "Amanda Cabello Pino - Abogada",
        "description": "Abogada especialista en derecho procesal en Marbella con más de 7 años de experiencia",
        "url": "{canonicalURL}",
        "logo": "{ogImageURL}",
        "image": "{ogImageURL}",
        "telephone": "+34-660-05-08-17",
        "email": "amanda@abogada.com",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Calle Legal 123",
          "addressLocality": "Marbella",
          "addressRegion": "Málaga",
          "postalCode": "29600",
          "addressCountry": "ES"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 36.5108,
          "longitude": -4.8850
        },
        "openingHours": "Mo-Fr 09:00-18:00",
        "priceRange": "€€",
        "areaServed": {
          "@type": "City",
          "name": "Marbella"
        },
        "serviceType": ["Derecho Procesal", "Asesoría Jurídica", "Derecho Civil", "Derecho Penal"],
        "founder": {
          "@type": "Person",
          "name": "Amanda Cabello Pino",
          "jobTitle": "Abogada Especialista",
          "alumniOf": "Universidad de Sevilla",
          "knowsAbout": ["Derecho Procesal", "Asesoría Jurídica de Empresas", "Mediación Civil y Mercantil"]
        },
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "5",
          "reviewCount": "50"
        }
      }
    </script>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/avatar.webp" />
    
    <!-- Preconnect para mejorar rendimiento -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Google Fonts - Quicksand -->
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- View Transitions -->
    <ClientRouter />
    
    <!-- Verificación de sitio (cuando sea necesario) -->
    <!-- <meta name="google-site-verification" content="tu-codigo-aqui" /> -->
    <!-- <meta name="msvalidate.01" content="tu-codigo-aqui" /> -->
  </head>
  <body class="bg-primary-50 text-black min-h-screen">
    <!-- Header React Component -->
    <Header currentPage={currentPage} client:load />
    <SectionNavigation client:load />

    <!-- Main Content -->
    <main class="pt-20">
      <slot />
    </main>

    <!-- Footer Component -->
    <Footer />
  </body>
</html>
